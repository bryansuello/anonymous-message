<%- include('partials/header') -%>

    <h4>Answer Question</h4>
    <form action="/answers" method="post">
      <div class='form-group'>
      <input type="text" class='form-control' name="questionId" placeholder="Question ID">
      </div>
      <div class='form-group'>
      <textarea cols="30" rows="3" class="form-control" name='answerInput' placeholder="Answer"></textarea>
      </div>
      <button type="submit" name="button" class="btn btn-primary">Submit Answer</button>
    </form>

  <% questions.forEach( question => { %>
    <h3>
        <%= question.question.substring(0, 20) + "..." + " " + ":" + " " + question.id %>
    </h3>
    <ul>
      <% question.answers.forEach( answer => { %>
        <li><%= answer %></li>
      <% }) %>
    </ul>
  <% }) %>

<%- include('partials/footer') -%>
